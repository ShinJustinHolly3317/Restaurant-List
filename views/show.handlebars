<h1 class="mb-1 restaurant-show-title">{{restaurant.name}}</h1>
<div class="container">
  <div class="row">
    <div class="col-12 col-md-10 mx-auto d-flex flex-column align-items-center">
      <div style="width:600px;">
        <p class="mb-1">
          <span class="text-secondary">
            <i class="fas fa-utensils pr-2"></i>
            類別：
          </span>
          {{restaurant.category}}
        </p>

        <p class="mb-1">
          <span class="text-secondary">
            <i class="fas fa-map-marker-alt pr-2"></i>
            地址：
          </span>
          {{restaurant.location}}
          <a href="https://goo.gl/maps/V9mKwVJ4s5v" class="text-secondary" target="_blank">
            <i class="fas fa-location-arrow pr-2 fa-xs"></i>
          </a>
        </p>

        <p class="mb-1">
          <span class="text-secondary">
            <i class="fas fa-mobile-alt pr-2"></i>
            電話：
          </span>
          {{restaurant.phone}}
        </p>
      </div>
      
      <img class="rounded mx-auto d-block mb-4 w-100 show-detail"
        src={{restaurant.image}} alt={{restaurant.name}}
        style="max-width: 600px;">

      <div class="description justfiy-content-center">
        <p class="mb-5">
          {{restaurant.description}}
        </p>
      </div>

    </div>
  </div>
</div>